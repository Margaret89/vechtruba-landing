extends tmpl/_layout

block vars
	- var pageId = 'main'

block body
	section.main-block.mb-indent
		.container
			.row
				.col-12
					.main-block__content
						.main-block__main
							.main-block__info
								h1 Тёплый дом за 1 день 
									span.text-color с экономией до 30%
								
								.main-block__text Получите модульную котельную по проекту с гарантией экономии на материалах до 30% - проверено сотнями объектов

								.note
									.note__img
										img(src="/upload/note-img.png", alt="")

									.note__content
										.note__text Узнайте стоимость для вашего дома 
											b за 5 минут без звонков

										a.btn Узнать стоимость

							.video-block
								.video-block__img
									img(src="/upload/video.jpg", alt="")
								
								.video-block__title Зачем нужен проект?
								.video-block__text Смотрите разбор от главного инженера

						.advantages
							-
								var list=[
									{main:'25 лет', text:' проектируем инженерные системы'},
									{main:'Команда обученных', text:' инженеров, без подрядчиков'},
									{main:'5,0 рейтинг', text:' всех отзывов на услуги проектирования'},
									{main:'1500+ проектов', text:' реализовали по всей России'},
								]
							each item in list
								.advantages__item
									.advantages__icon
										+svg('ic-check','ic-check', '12', '10')

									.advantages__text
										span.advantages__accent= item.main
										=item.text

	section.main-projects.m-indent
		.container
			.row
				.col-12
					.main-projects__content
						.main-projects__title
							h2
								span.text-color Что входит
								| в проект:

						-
							var list=[
								{icon:'consulting.svg', title:'Консультация и тех. задания', text:'Инженер разбирает вашу задачу, фиксирует требования, подбирает оптимальное решение'},
								{icon:'docs.svg', title:'Пакет документов', text:'3D-проект отопления. Альбом в PDF/Revit + пояснительная записка — готово к монтажу и согласованию'},
								{icon:'auto.svg', title:'Автоматика и безопасность', text:'Схемы управления, защиты и датчиков для стабильной работы'},
								{icon:'montage.svg', title:'Сопровождение монтажа', text:'Ответы монтажникам, авторский надзор по чек-листу до запуска'},
								{icon:'system.svg', title:'Расчёты системы', text:'Теплопотери, гидравлика, мощности котла/насосов, балансировка контуров'},
								{icon:'scheme.svg', title:'Схемы и чертежи', text:'Схема котельной, аксонометрия/планы этажей, узлы подключений'},
								{icon:'equipment.svg', title:'Подбор оборудования', text:'Рекомендации по брендам и артикулам под ваш бюджет и доступность'},
								{icon:'plan.svg', title:'Смета и спецификация', text:'Прозрачный перечень материалов и работ с количеством и ценами'},
							]
						each item in list
							.project-content
								.project-content__icon
									img(src="/upload/"+item.icon, alt="")

								.project-content__content
									.project-content__title= item.title
									.project-content__text= item.text

						.main-projects__img
							img(src="/upload/3d.png", alt="")
						
					.steps
						.steps__head
							.steps__icon
								+svg('ic-help-circle','ic-help-circle', '32', '32')

							.steps__title Почему выгодно работать с нами?

						.steps__list
							-
								var list=[
									{num:'01', text1:'Экономия', text2:'на материалах'},
									{num:'02', text1:'Простая, надёжная и предсказуемая сборка'},
									{num:'03', text1:'Возможность контролировать подрядчика'},
								]
							each item in list
								.steps__item
									.steps__text= item.text1
										if(item.text2)
											br
											=item.text2

									.steps__num= item.num
	
